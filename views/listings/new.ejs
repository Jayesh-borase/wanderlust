<div class="container mt-5">
    <h2 class="text-center mb-4">Create a New Listing</h2>
    <form method="post" action="/listings" class="w-50 mx-auto p-4 shadow rounded bg-white">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input name="listing[title]" class="form-control" placeholder="Add a catchy title" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" rows="3" placeholder="Enter description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Image Link</label>
            <input name="listing[image]" class="form-control" placeholder="enter image URL/Link">
        </div>
        <div class="row mb-3">
            <div class="col">
                <label class="form-label">Price</label>
                <input name="listing[price]" class="form-control" placeholder="Enter price" type="number">
            </div>
            <div class="col">
                <label class="form-label">Country</label>
                <input name="listing[country]" class="form-control" placeholder="Enter country">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Location</label>
            <input name="listing[location]" class="form-control" placeholder="Enter location">
        </div>
        <div class="text-center">
            <button class="btn btn-danger px-4 py-2">Add</button>
        </div>
    </form>
</div>
    