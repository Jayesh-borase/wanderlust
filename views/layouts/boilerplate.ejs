<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
   .navbar .form-control-sm {
  height: 30px;
  font-size: 0.85rem;
}

.navbar .btn-sm {
  height: 30px;
  font-size: 0.85rem;
}

/* Ensure search form stays centered and fixed width */
.navbar form {
  flex: 0 0 auto;
}

      .categories-bar {
  border-bottom: 1px solid #ddd;
  padding: 10px 0;
  display: flex;               /* ensure flex layout */
  flex-direction: row;          /* force horizontal */
  overflow-x: auto;             /* allow horizontal scroll */
  white-space: nowrap;          /* prevent wrapping */
}

.category {
  flex: 0 0 auto;               /* prevents shrinking */
  text-align: center;
  min-width: 80px;
  color: #555;
  cursor: pointer;
  transition: color 0.2s ease;
}

.category:hover {
  color: #000;
}
        html, body {
            height: 100%;
        }
        body {
            font-family: 'Poppins', sans-serif;
            display: flex;
            flex-direction: column;
        }
        .navbar {
            padding: 12px 20px;
            background-color: white !important;
            border-bottom: 1px solid black;
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }
        .navbar-nav {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 15px;
            margin-left: 0;
        }
        .navbar-nav .nav-link {
            color: #222 !important;
            font-size: 16px;
            font-weight: 400;
            padding: 5px 8px;
            transition: color 0.3s ease, background-color 0.3s ease;
            border-radius: 4px;
        }
        .navbar-nav .nav-link:hover {
            color: white !important;
            background-color: #222;
        }
        .navbar-nav .nav-link.active {
            color: white !important;
            background-color: #000;
        }
        main {
            flex: 1 0 auto; /* allows main content to grow and push footer down */
            margin-top: 20px;
        }
        footer {
            flex-shrink: 0; /* footer does not shrink */
        }
        /* Flash message container */
        .flash-container {
            position: fixed;
            top: 70px; /* below navbar */
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            max-width: 500px;
            z-index: 1100;
        }
        .flash-container .alert {
            text-align: center;
            font-size: 1rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
    </style>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Navbar -->
  <!-- Navbar -->
<nav class="navbar">
  <div class="d-flex align-items-center w-100">
    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <img src="https://cdn-icons-png.flaticon.com/512/684/684908.png" alt="Logo">
    </a>

    <!-- Navigation Links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/listings">Explore</a>
      </li>
    </ul>

    <!-- Search form -->
       <form class="d-flex position-absolute start-50 translate-middle-x" action="/listings" method="GET" style="width: 300px;">
  <input class="form-control form-control-sm me-2" type="text" name="location" placeholder="Search by city or country" aria-label="Search">
  <button class="btn btn-primary btn-sm" type="submit">Search</button>
</form>


    <!-- Auth Buttons -->
    <div class="d-flex align-items-center gap-3 ms-auto">
      <ul class="navbar-nav d-flex flex-row gap-3">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if (!currentUser) { %>
          <li class="nav-item">
  <a class="nav-link fw-normal text-dark" href="/signup">Sign up</a>
</li>
<li class="nav-item">
  <a class="nav-link fw-normal text-dark" href="/login">Log in</a>
</li>

        </ul>
      <% } else { %>
        <a class="btn btn-danger" href="/logout">Log out</a>
      <% } %>
    </div>
  </div>
</nav>


</nav>

    <!-- Flash messages -->
    <div class="flash-container">
      <% if (typeof success !== 'undefined' && success.length) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
           <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <% if (typeof error !== 'undefined' && error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
           <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
    </div>

    <!-- Main content -->
    <main class="container">
      <%- body %>
    </main>

    <%- include('../includes/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Auto-hide flash messages after 3 seconds
      document.addEventListener("DOMContentLoaded", function() {
        const alerts = document.querySelectorAll('.flash-container .alert');
        alerts.forEach(alert => {
          setTimeout(() => {
            const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
            bsAlert.close();
          }, 3000);
        });
      });

document.addEventListener("DOMContentLoaded", function() {
  const taxSwitch = document.getElementById("taxSwitch");

  // Select all listings
  const listings = document.querySelectorAll(".listing-price");

  // Initially hide GST
  listings.forEach(listing => {
    const taxInfo = listing.querySelector(".tax-info");
    taxInfo.classList.add("d-none");
  });

  // Listen for switch toggle
  taxSwitch.addEventListener("change", function() {
    listings.forEach(listing => {
      const priceEl = listing.querySelector(".price-value");
      const basePrice = parseFloat(priceEl.dataset.basePrice); // always use original price
      const taxInfo = listing.querySelector(".tax-info");

      if (taxSwitch.checked) {
        // Switch ON → show GST
        const totalPrice = (basePrice * 1.18).toFixed(2); // 18% GST
        priceEl.textContent = `₹ ${totalPrice}`;
        taxInfo.classList.remove("d-none");
      } else {
        // Switch OFF → show base price
        priceEl.textContent = `₹ ${basePrice}`;
        taxInfo.classList.add("d-none");
      }
    });
  });
});
</script>

</body>
</html>
