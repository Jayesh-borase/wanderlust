<div class="container listing-container">
    <h2 class="text-center mb-4">Login</h2>
    
    <form method="post" action="/login" class="w-50 mx-auto p-4 shadow rounded bg-white needs-validation" novalidate>
        
        <!-- Username -->
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input name="username" class="form-control" placeholder="Enter your username" required>
            <div class="invalid-feedback">Please provide your username.</div>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Enter your password" required>
            <div class="invalid-feedback">Please provide your password.</div>
        </div>

        <div class="text-center">
            <button class="btn btn-danger px-4 py-2" type="submit">Login</button>
        </div>

        <p class="text-center mt-3">
            Don't have an account? <a href="/signup">Sign up here</a>
        </p>
    </form>
</div>

<!-- Bootstrap Validation Script -->
<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
